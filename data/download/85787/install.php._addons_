) NOT NULL,  `url` varchar(200) NOT NULL,  `list` int(11) NOT NULL,  PRIMARY KEY (`id`),  UNIQUE KEY `aid` (`aid`) USING BTREE);DROP TABLE IF EXISTS `$syscache`;CREATE TABLE `$syscache` (  `cname` varchar(32) NOT NULL,  `ctype` tinyint(3) unsigned NOT NULL,  `dateline` int(10) unsigned NOT NULL,  `data` mediumblob NOT NULL,  PRIMARY KEY (`cname`));DROP TABLE IF EXISTS `$firstpay`;CREATE TABLE `$firstpay` (  `id` int(11) NOT NULL AUTO_INCREMENT,  `gid` int(11) NOT NULL,  `firstpayinfo` text ,  `firststatus` tinyint(1) NOT NULL  DEFAULT 0,  PRIMARY KEY (`id`),  UNIQUE KEY `gid` (`gid`) USING BTREE);DROP TABLE IF EXISTS `$play`;CREATE TABLE `$play` (  `id` int(11) NOT NULL AUTO_INCREMENT,  `uid` int(11) NOT NULL,  `gid` int(11) NOT NULL,  `sid` int(11) NOT NULL,  `play_time` datetime NOT NULL,  PRIMARY KEY (`id`));DROP TABLE IF EXISTS `$news`;CREATE TABLE `$news` (  `id` int(11) NOT NULL AUTO_INCREMENT,  `nid` int(11) NOT NULL,  `title` varchar(200) NOT NULL,  `context` text NOT NULL,  `type` int(11) NOT NULL,  `gid` int(11) NOT NULL,  `time_add` datetime NOT NULL,  PRIMARY KEY (`id`),  UNIQUE KEY `nid` (`nid`) USING BTREE);DROP TABLE IF EXISTS `$ziliao`;CREATE TABLE `$ziliao` (  `id` int(11) NOT NULL AUTO_INCREMENT,  `nid` int(11) NOT NULL,  `title` varchar(200) NOT NULL,  `context` text NOT NULL,  `type` int(11) NOT NULL,  `gid` int(11) NOT NULL,  `time_add` datetime NOT NULL,  PRIMARY KEY (`id`),  UNIQUE KEY `nid` (`nid`) USING BTREE);DROP TABLE IF EXISTS `$h5game`;CREATE TABLE `$h5game` (  `id` int(11) NOT NULL AUTO_INCREMENT,  `appid` varchar(50) NOT NULL,  `dtype` tinyint(1) DEFAULT 1,  `packageName` varchar(50) DEFAULT NULL,  `minVersion` varchar(10) DEFAULT NULL,  `minVersionCode` tinyint(1) DEFAULT NULL,  `name` varchar(50) DEFAULT NULL,  `categoryName` varchar(100) DEFAULT NULL,  `description` varchar(500) DEFAULT NULL,  `developer` varchar(20) DEFAULT NULL,  `direction` tinyint(1) DEFAULT 0,
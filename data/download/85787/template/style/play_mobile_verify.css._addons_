#bg_div {
    background-color: rgb(0, 0, 0);
    opacity: 0.85;
    position: fixed;
    width: 100%;
    height: 100%;
}

#verify_div {
    position: fixed;
    margin: auto;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
}

.line_div {
    width: 80%;
    height: 2px;
    background: #ffffff;
    margin: 0 auto;
}

.line_input_div {
    width: 100%;
    height: 2px;
    background: #ffffff;
}

input::-webkit-input-placeholder{
    color:#aaaaaa;
}
input::-moz-placeholder{   /* Mozilla Firefox 19+ */
    color:#aaaaaa;
}
input:-moz-placeholder{    /* Mozilla Firefox 4 to 18 */
    color:#aaaaaa;
}
input:-ms-input-placeholder{  /* Internet Explorer 10-11 */
    color:#aaaaaa;
}

@media screen and (min-width: 640px) {
    .verify_div {
        width: 520px;
        height: 520px;
    }
    .content_div {
        width: 480px;
        height:514px;
        border-radius: 30px;
        border: #ffffff solid 2px;
        margin: 0 auto;
        clear: both;
    }
    .verify_p {
        text-align: center;
        color: #ffffff;
        font-size: 25px;
        line-height: 90px;
    }
    .top_div {
        height: 90px;
        width: 100%;
    }
    .tip_div {
        height: 132px;
        margin: 5% 10% 3%;
    }
    .tip_p {
        color: #aaaaaa;
        font-size: 18px;
        line-height: 28px;
    }
    .star_span {
        color: #00a004;
        font-size: 18px;
    }
    .input_div {
        height: 124px;
    }
    .container_div {
        width: 80%;
        height: 62px;
        margin: 0 auto;
    }
    .container_div img {
        position: absolute;
        height: 40px;
        width: 40px;
        margin-top: 11px;
        margin-left: 5px;
    }
    .container_div input {
        height: 100%;
        width: 324px;
        background: transparent;
        border: 0;
        margin-left: 60px;
        font-size: 22px;
        color: #ffffff;
    }
    .sure_btn {
        margin-top: 20px;
        border: #ffffff solid 2px;
        border-radius: 80px;
        background: transparent;
        text-align: center;
        color: #ffffff;
        width: 60%;
        height: 50px;
        margin: 40px auto;
        line-height: 50px;
        font-size: 20px;
    }
    .close_btn {
        height: 40px;
        width: 40px;
        float: right;
    }
}


*{ margin:0; padding:0;}
body{overflow:hidden;}
.top_bg{ width:100%;height:30px; background:#333;padding-left:20px;}
.float{float:left;}
.l_h_30{color:#fff;margin-right:50px;line-height:30px; font-size:12px;}
.float_r{float:right;}
a{text-decoration:none;}
.JF-h5{position: absolute;  bottom: 7px;  left: 50%;  background: url(../img/phone.png) no-repeat;  background-size: 100%;display: none;}
.fullmode .JF-h5 {
    background: 0 0;
    height: 100%!important;
    width:100%!important;
    margin-left:0!important;
    bottom: 0;
    top: 0;
    left:0;
    padding: 0!important;
}
.fullmode .fullmode-screen{
    display: block;
}
.fullmode .pcmode-screen {
    display: none;
}
.h5-screen,.h5-hscreen{background: #fcc25e;cursor: pointer;  color: #79623a;  font-size: 16px;  position: absolute;  width: 28px;  height: 97px;  top: 92px;  right: -28px;  line-height: 16px;  text-align: center;  border-top-right-radius: 4px;  border-bottom-right-radius: 4px;}
.h5-hscreen{
    top: 199px;
}
.Rotate{
    transform:rotate(-90deg);
    -ms-transform:rotate(-90deg); /* Internet Explorer */
    -moz-transform:rotate(-90deg); /* Firefox */
    -webkit-transform:rotate(-90deg); /* Safari 和 Chrome */
    -o-transform:rotate(-90deg); /* Opera */
}
.Rotate .pcmode-screen span{
    display: block;
    transform:rotate(90deg);
    -ms-transform:rotate(90deg); /* Internet Explorer */
    -moz-transform:rotate(90deg); /* Firefox */
    -webkit-transform:rotate(90deg); /* Safari 和 Chrome */
    -o-transform:rotate(90deg); /* Opera */
}
.h5-hscreen>.ico-resize{
    background: url(../img/rotate-icon.png) no-repeat;
    width:17px;
}
.h5-hscreen:hover>.ico-resize{
    background: url(../img/rotate-icon-on.png) no-repeat;
    width:17px;
}
.ico-resize{
    display: block;
    width: 16px;
    height: 16px;
    background: no-repeat;
    background-position: -36px -217px;
    margin: 7px auto 5px;
}
.h5-screen:hover .ico-resize {
    background: no-repeat;
    background-position: -54px -217px;
}
.ico-resize, .h5-screen:hover .ico-resize {
    background-image: url(../img/h5.png);
}
.h5-screen:hover, .h5-hscreen:hover {
    background: #ff8400;
    color: #fff;
}

.pcmode-screen {
    display: block;
}
.fullmode-screen {
    display: none;
}